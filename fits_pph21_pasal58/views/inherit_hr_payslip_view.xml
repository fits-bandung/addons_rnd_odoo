<openerp>
    <data>
        <record id="view_inherit_hr_payslip_form" model="ir.ui.view">
            <field name="name">inherit.hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="om_hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group" position="replace">
                     <group>
                        <group col="1">
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline" readonly="state != 'draft'"/>
                                -
                                <field name="date_to" class="oe_inline" readonly="state != 'draft'"/>
                            </div>
                            <field name="number" readonly="state != 'draft'"/>
                            <field name="name" readonly="state != 'draft'"/>
                            <field name="pendapatan_bruto_tahunan"/>
                            <field name="pendapatan_bruto_bulanan"/>
                            <field name="tunjangan_pajak"/>
                        </group>
                        <group>
                            <field name="contract_id" readonly="state != 'draft'" domain="[('employee_id','=',employee_id),('date_start','&lt;=',date_to),'|',('date_end','&gt;=',date_from),('date_end','=',False)]" context="{'default_employee_id': employee_id}"/>
                            <field name="struct_id" required="contract_id != False" readonly="state != 'draft'"/>
                            <field name="pph21_tahunan"/>
                            <field name="pph21_bulanan"/>
                            <field name="is_tahunan"/>
                            <field name="credit_note" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//sheet/notebook/page[3]" position="after">
                    <page string="Kalkulasi Nilai Tahunan">
                       <separator string="Kalkulasi Nilai Tahunan"/>
                            <field name="bruto_pph_ids" colspan="4" nolabel="1" readonly="1">
                                <tree string="Kalkulasi Nilai Tahunan">
                                    <field name="ref"/>
                                    <field name="payslip_name"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="bruto_bulanan" sum="Total Bruto Bulanan"/>
                                    <field name="pph21_bulanan" sum="Total Pph21 Bulanan"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_inherit_hr_payslip_run_form" model="ir.ui.view">
            <field name="name">inherit.hr.payslip.run.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="om_hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <field name="credit_note" position="before">
                    <field name="is_tahunan"/>
                </field>

            </field>
        </record>
        <record id="view_inherit_hr_payroll_structure" model="ir.ui.view">
            <field name="name">inherit.hr.payroll.structure</field>
            <field name="model">hr.payroll.structure</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="om_hr_payroll.view_hr_employee_grade_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page/field[@name='rule_ids']/tree/field[@name='sequence']" position="replace">
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>
        <record id="view_inherit_hr_salary_rule" model="ir.ui.view">
            <field name="name">inherit.hr.salary.rule</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="om_hr_payroll.hr_salary_rule_list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='sequence']" position="replace">
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>